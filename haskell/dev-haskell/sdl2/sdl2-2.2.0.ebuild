CABAL_FEATURES="lib profile haddock hoogle hscolour"
inherit haskell-cabal

DESCRIPTION="Both high- and low-level bindings to the SDL library (version 2.0.4+)"
HOMEPAGE="http://hackage.haskell.org/package/sdl2"
SRC_URI="mirror://hackage/packages/archive/${PN}/${PV}/${P}.tar.gz"

LICENSE="BSD"
SLOT="0/${PV}"
KEYWORDS="~amd64 ~x86"
IUSE="examples"

RDEPEND="media-libs/libsdl2
	>=dev-haskell/exceptions-0.4:=[profile?] <dev-haskell/exceptions-0.9:=[profile?]
	>=dev-haskell/linear-1.10.1.2:=[profile?] <dev-haskell/linear-1.21:=[profile?]
	>=dev-haskell/statevar-1.1.0.0:=[profile?] <dev-haskell/statevar-1.2:=[profile?]
	>=dev-haskell/text-1.1.0.0:=[profile?] <dev-haskell/text-1.3:=[profile?]
	>=dev-haskell/vector-0.10.9.0:=[profile?] <dev-haskell/vector-0.13:=[profile?]
	>=dev-lang/ghc-7.8.2:=
	media-libs/libsdl2
	examples? ( dev-haskell/opengl:=[profile?] )
"
DEPEND="${RDEPEND}
	>=dev-haskell/cabal-1.18.1.3
	virtual/pkgconfig
"

src_configure() {
	haskell-cabal_src_configure \
		$(cabal_flag examples examples) \
		--flag=-no-linear \
		$(cabal_flag examples opengl-example)
}
